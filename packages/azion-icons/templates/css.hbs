@font-face {
  font-family: '{{name}}';
  src: url('{{fontsUrl}}{{name}}.woff2') format('woff2');
}

.{{prefix}} {
  font-family: '{{name}}';
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  display: inline-block;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

{{#each codepoints}}
.{{../prefix}}.{{@key}}::before {
  content: '\\{{codepoint this}}';
}
{{/each}}
